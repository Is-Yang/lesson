.displayFlex {
  display: flex;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
}
.notselect {
  user-select: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
}
.learnRecordWrapper {
  max-width: 1200px;
  height: auto;
  margin: 0 auto;
  background-color: #fff;
}
.learning-record .user-info {
  align-items: flex-end;
  -webkit-align-items: flex-end;
  -moz-align-items: flex-end;
  -ms-align-items: flex-end;
  -o-align-items: flex-end;
  padding: 30px 50px;
}
.learning-record .user-info .portrait {
  border-radius: 50%;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  -ms-border-radius: 50%;
  -o-border-radius: 50%;
  display: inline-block;
  background-color: #eee;
  width: 60px;
  height: 60px;
  object-fit: cover;
  -o-object-fit: cover;
}
.learning-record .user-info .user-desc {
  margin-left: 15px;
}
.learning-record .user-info .user-desc .el-row {
  flex-direction: column;
  -webkit-flex-direction: column;
  -moz-flex-direction: column;
  -ms-flex-direction: column;
  -o-flex-direction: column;
  height: 100%;
}
.learning-record .user-info .user-desc strong {
  color: #333;
  font-size: 20px;
}
.learning-record .user-info .user-desc .coins {
  position: relative;
}
.learning-record .user-info .user-desc .coins .coins-title,
.learning-record .user-info .user-desc .coins .coins-num {
  font-size: 16px;
}
.learning-record .user-info .user-desc .coins .coins-title {
  color: #4c4c4c;
}
.learning-record .user-info .user-desc .coins .coins-num {
  color: #ff414a;
}
.learning-record .user-info .user-desc .coins .coins-num + strong {
  font-size: 18px;
  background-color: #409EFF;
  color: #fff;
  display: inline-block;
  width: 18px;
  height: 18px;
  text-align: center;
  border-radius: 3px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  margin-left: 20px;
  cursor: pointer;
}
.learning-record .user-info .user-desc .coins .tooltip-how {
  position: absolute;
  top: 20px;
  display: none;
  width: 282px;
  border: 1px solid #a0a0a0;
  border-radius: 2px;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  -ms-border-radius: 2px;
  -o-border-radius: 2px;
  font-size: 11px;
  color: #101010;
  padding: 0 10px;
  font-family: 'MicrosoftYaHeiLight';
}
.learning-record .user-info .code-summary .el-col {
  border-right: 1px solid #B5B5B5;
  text-align: center;
}
.learning-record .user-info .code-summary .el-col .title {
  color: #6a6a6a;
  font-size: 14px;
}
.learning-record .user-info .code-summary .el-col .lines {
  color: #333;
  font-size: 16px;
  font-weight: bold;
  margin-top: 15px;
}
.learning-record .user-info .code-summary .el-col .lines span {
  font-size: 18px;
  margin-right: 5px;
  color: #ff414a;
}
.learning-record .user-info .code-summary .el-col:last-child {
  border: none;
}
.presenter {
  padding: 5px 25px 15px;
  background-color: rgba(64, 158, 254, 0.1);
  text-align: center;
  position: relative;
}
.presenter .presenter-content {
  color: #333;
  font-size: 14px;
  font-weight: bold;
}
.presenter .presenter-content .el-input {
  width: 322px;
  margin-bottom: 14px;
}
.presenter .presenter-content .el-input .el-input__inner {
  border: 1px solid #409EFE;
}
.presenter .presenter-dismiss {
  position: absolute;
  right: 25px;
  top: 8px;
  font-size: 14px;
  color: #6a6a6a;
  text-decoration: underline;
  cursor: pointer;
}
.learning-record .lesson-list {
  padding: 70px 10px;
}
.learning-record .lesson-list .total {
  margin-bottom: 25px;
  font-size: 20px;
  color: #666;
}
.learning-record .lesson-list .el-row {
  margin: 0 -9px;
}
.learning-record .lesson-list .el-col {
  padding: 0 9px 25px 9px;
}
.learning-record .lesson-list .lesson-cover {
  display: block;
  height: 160px;
  position: relative;
}
.learning-record .lesson-list .lesson-cover:hover :before {
  content: "";
  width: 55px;
  height: 55px;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
  background: url(/imgs/main/play_btn.png) no-repeat center center;
  background-size: contain;
}
.learning-record .lesson-list .lesson-cover > div {
  width: 100%;
  height: 100%;
  background-position: 50% 50%;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 6px;
  -webkit-border-radius: 6px;
  -moz-border-radius: 6px;
  -ms-border-radius: 6px;
  -o-border-radius: 6px;
}
.learning-record .lesson-list .title {
  display: block;
  margin: 12px 0;
  font-size: 17px;
  color: #333;
}
.learning-record .lesson-list .title:hover {
  color: #49A5F8;
}
.learning-record .lesson-list .time,
.learning-record .lesson-list .ages {
  margin-bottom: 10px;
  color: #999;
  font-size: 14px;
}
.learning-record .lesson-list .time span,
.learning-record .lesson-list .ages span {
  color: #666;
}
